<div class="admin-page-header">
  <%= link_to clients_path, class: "back-link" do %>
    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 4px;">
      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
    </svg>
    Retour aux clients
  <% end %>
  <div class="header-with-actions">
    <div>
      <h1>Modifier le Client</h1>
      <p class="text-muted">Entreprise Dubois</p>
    </div>
  </div>
</div>

<div class="admin-content-grid">
  <!-- Client Information Form -->
  <div class="admin-card">
    <div class="card-header">
      <h2>Informations Principales</h2>
    </div>
    <form action="#" method="post">
      <div class="form-group">
        <label for="client_name" class="form-label">Nom de l'entreprise / Nom complet *</label>
        <input type="text" id="client_name" name="client[name]" class="form-input" value="Entreprise Dubois" required>
        <p class="form-help">Le nom tel qu'il apparaîtra sur les devis et factures</p>
      </div>

      <div class="form-group">
        <label for="client_type" class="form-label">Type de client *</label>
        <select id="client_type" name="client[client_type]" class="form-select" required>
          <option value="">Sélectionnez un type</option>
          <option value="professional" selected>Professionnel</option>
          <option value="individual">Particulier</option>
        </select>
      </div>

      <div class="form-group">
        <label for="client_siret" class="form-label">SIRET</label>
        <input type="text" id="client_siret" name="client[siret]" class="form-input" value="987 654 321 00015" placeholder="XXX XXX XXX XXXXX">
        <p class="form-help">Obligatoire pour les clients professionnels</p>
      </div>

      <div class="form-group">
        <label for="client_address" class="form-label">Adresse complète *</label>
        <textarea id="client_address" name="client[address]" class="form-input" rows="4" required>42 Avenue de la République
69003 Lyon
France</textarea>
        <p class="form-help">L'adresse telle qu'elle apparaîtra sur les documents</p>
      </div>

      <div class="form-group">
        <label for="created_via" class="form-label">Créé via</label>
        <select id="created_via" name="client[created_via]" class="form-select" disabled>
          <option value="whatsapp" selected>WhatsApp</option>
          <option value="web">Interface Web</option>
          <option value="admin">Administration</option>
        </select>
        <p class="form-help">Cette information ne peut pas être modifiée</p>
      </div>
    </form>
  </div>

  <!-- Contact Information Form -->
  <div class="admin-card">
    <div class="card-header">
      <h2>Coordonnées</h2>
    </div>
    <form action="#" method="post">
      <div class="form-group">
        <label for="contact_phone" class="form-label">Téléphone</label>
        <input type="tel" id="contact_phone" name="client[contact_phone]" class="form-input" value="+33 6 98 76 54 32" placeholder="+33 X XX XX XX XX">
        <p class="form-help">Format international recommandé</p>
      </div>

      <div class="form-group">
        <label for="contact_email" class="form-label">Email</label>
        <input type="email" id="contact_email" name="client[contact_email]" class="form-input" value="m.dubois@entreprise-dubois.fr" placeholder="contact@example.com">
      </div>

      <div class="form-group">
        <label class="form-label">WhatsApp</label>
        <div style="display: flex; align-items: center; gap: var(--spacing-sm); padding: var(--spacing-sm); background-color: var(--bg-light); border-radius: var(--radius-md);">
          <span class="badge badge-green">✓ Connecté</span>
          <span class="text-muted small">Lié au chat WhatsApp actif</span>
        </div>
      </div>

      <div class="form-group">
        <label for="contact_name" class="form-label">Contact principal</label>
        <input type="text" id="contact_name" name="client[contact_name]" class="form-input" value="Marie Dubois" placeholder="Nom du contact">
        <p class="form-help">Personne à contacter chez ce client</p>
      </div>
    </form>
  </div>
</div>

<!-- Additional Information -->
<div class="admin-card" style="margin-top: var(--spacing-lg);">
  <div class="card-header">
    <h2>Informations Supplémentaires</h2>
  </div>
  <form action="#" method="post">
    <div class="form-group">
      <label for="notes" class="form-label">Notes internes</label>
      <textarea id="notes" name="client[notes]" class="form-input" rows="4" placeholder="Informations supplémentaires, préférences, historique...">Client régulier depuis 2023. Préfère les communications par WhatsApp.
Projets précédents: rénovation cuisine, extension véranda.</textarea>
      <p class="form-help">Ces notes sont privées et ne seront pas visibles sur les documents</p>
    </div>

    <div class="details-list">
      <div class="detail-item">
        <span class="detail-label">Client depuis</span>
        <span class="detail-value">15 septembre 2025</span>
      </div>
      <div class="detail-item">
        <span class="detail-label">Dernière modification</span>
        <span class="detail-value">28 octobre 2025 à 16:30</span>
      </div>
      <div class="detail-item">
        <span class="detail-label">Modifié par</span>
        <span class="detail-value">Mehmet Yilmaz (via WhatsApp)</span>
      </div>
    </div>
  </form>
</div>

<!-- Form Actions -->
<div class="form-actions" style="margin-top: var(--spacing-lg);">
  <%= link_to "Annuler", clients_path, class: "btn btn-secondary" %>
  <%= link_to client_path(1), class: "btn btn-secondary" do %>
    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
      <path fill-rule="evenodd" d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
      <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
      <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
    </svg>
    <span>Voir le client</span>
  <% end %>
  <button type="submit" class="btn btn-primary">
    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
      <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z"/>
    </svg>
    <span>Enregistrer les modifications</span>
  </button>
</div>

<!-- Danger Zone -->
<div class="admin-card" style="margin-top: var(--spacing-xl); border-color: var(--danger-color);">
  <div class="card-header">
    <h2 style="color: var(--danger-color);">Zone dangereuse</h2>
  </div>
  <div style="padding: var(--spacing-md);">
    <p class="text-muted" style="margin-bottom: var(--spacing-md);">
      La suppression d'un client est une action irréversible. Tous les devis et factures associés seront conservés mais ne seront plus liés à ce client.
    </p>
    <button type="button" class="btn btn-danger" onclick="if(confirm('Êtes-vous sûr de vouloir supprimer ce client ? Cette action est irréversible.')) { alert('Fonction de suppression non implémentée dans cette démo'); }">
      <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
      </svg>
      <span>Supprimer ce client</span>
    </button>
  </div>
</div>
