<% content_for :title, "Tableau de bord - Devis WhatsApp" %>

<div class="dashboard-container">
  <!-- Page Header -->
  <div class="dashboard-header">
    <div class="dashboard-header-content">
      <h1 class="dashboard-title">Tableau de bord</h1>
      <p class="dashboard-subtitle">Bienvenue sur votre assistant de devis et facturation WhatsApp</p>
    </div>
    
    <div class="dashboard-header-actions">
      <%= link_to "/whatsapp/connect", class: "btn btn-primary" do %>
        <span>📱</span>
        <span>Connecter WhatsApp</span>
      <% end %>
    </div>
  </div>

  <!-- WhatsApp Connection Status -->
  <div class="dashboard-alert dashboard-alert-info">
    <div class="dashboard-alert-icon">ℹ️</div>
    <div class="dashboard-alert-content">
      <h3 class="dashboard-alert-title">Connectez votre WhatsApp</h3>
      <p class="dashboard-alert-text">
        Pour commencer à créer des devis et factures par commande vocale, 
        connectez votre compte WhatsApp personnel. C'est simple et sécurisé !
      </p>
      <div class="dashboard-alert-actions">
        <%= link_to "Voir le guide de connexion →", "/whatsapp/connect", class: "dashboard-alert-link" %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="dashboard-stats-grid">
    <!-- Quotes Stats -->
    <div class="dashboard-stat-card">
      <div class="dashboard-stat-icon dashboard-stat-icon-blue">
        📄
      </div>
      <div class="dashboard-stat-content">
        <h3 class="dashboard-stat-label">Devis créés</h3>
        <p class="dashboard-stat-value">0</p>
        <p class="dashboard-stat-change dashboard-stat-change-neutral">Ce mois-ci</p>
      </div>
    </div>

    <!-- Invoices Stats -->
    <div class="dashboard-stat-card">
      <div class="dashboard-stat-icon dashboard-stat-icon-green">
        🧾
      </div>
      <div class="dashboard-stat-content">
        <h3 class="dashboard-stat-label">Factures créées</h3>
        <p class="dashboard-stat-value">0</p>
        <p class="dashboard-stat-change dashboard-stat-change-neutral">Ce mois-ci</p>
      </div>
    </div>

    <!-- Clients Stats -->
    <div class="dashboard-stat-card">
      <div class="dashboard-stat-icon dashboard-stat-icon-purple">
        👥
      </div>
      <div class="dashboard-stat-content">
        <h3 class="dashboard-stat-label">Clients actifs</h3>
        <p class="dashboard-stat-value">0</p>
        <p class="dashboard-stat-change dashboard-stat-change-neutral">Total</p>
      </div>
    </div>

    <!-- Revenue Stats -->
    <div class="dashboard-stat-card">
      <div class="dashboard-stat-icon dashboard-stat-icon-orange">
        💰
      </div>
      <div class="dashboard-stat-content">
        <h3 class="dashboard-stat-label">Chiffre d'affaires</h3>
        <p class="dashboard-stat-value">0 €</p>
        <p class="dashboard-stat-change dashboard-stat-change-neutral">Ce mois-ci</p>
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="dashboard-content-grid">
    <!-- Recent Activity Section -->
    <div class="dashboard-section">
      <div class="dashboard-section-header">
        <h2 class="dashboard-section-title">
          <span>📊</span>
          <span>Activité récente</span>
        </h2>
        <%= link_to "Voir tout →", "/conversations", class: "dashboard-section-link" %>
      </div>
      
      <div class="dashboard-section-content">
        <div class="dashboard-empty-state">
          <div class="dashboard-empty-icon">💬</div>
          <h3 class="dashboard-empty-title">Aucune activité récente</h3>
          <p class="dashboard-empty-text">
            Vos conversations WhatsApp et documents créés apparaîtront ici.
            Commencez par connecter votre WhatsApp pour créer votre premier devis !
          </p>
          <%= link_to "Connecter WhatsApp", "/whatsapp/connect", class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="dashboard-section">
      <div class="dashboard-section-header">
        <h2 class="dashboard-section-title">
          <span>⚡</span>
          <span>Actions rapides</span>
        </h2>
      </div>
      
      <div class="dashboard-section-content">
        <div class="dashboard-actions-list">
          <!-- WhatsApp Commands Info -->
          <div class="dashboard-action-card">
            <div class="dashboard-action-icon">📝</div>
            <div class="dashboard-action-content">
              <h3 class="dashboard-action-title">Créer un devis</h3>
              <p class="dashboard-action-text">
                Envoyez <strong>"créer un devis"</strong> ou <strong>"nouveau devis"</strong> sur WhatsApp
              </p>
            </div>
          </div>

          <div class="dashboard-action-card">
            <div class="dashboard-action-icon">📋</div>
            <div class="dashboard-action-content">
              <h3 class="dashboard-action-title">Créer une facture</h3>
              <p class="dashboard-action-text">
                Envoyez <strong>"créer une facture"</strong> ou <strong>"nouvelle facture"</strong> sur WhatsApp
              </p>
            </div>
          </div>

          <div class="dashboard-action-card">
            <div class="dashboard-action-icon">👤</div>
            <div class="dashboard-action-content">
              <h3 class="dashboard-action-title">Ajouter un client</h3>
              <p class="dashboard-action-text">
                Envoyez <strong>"créer un client"</strong> ou <strong>"nouveau client"</strong> sur WhatsApp
              </p>
            </div>
          </div>

          <div class="dashboard-action-card">
            <div class="dashboard-action-icon">❓</div>
            <div class="dashboard-action-content">
              <h3 class="dashboard-action-title">Obtenir de l'aide</h3>
              <p class="dashboard-action-text">
                Envoyez <strong>"aide"</strong> ou <strong>"help"</strong> sur WhatsApp
              </p>
            </div>
          </div>
        </div>

        <!-- Web Quick Links -->
        <div class="dashboard-quick-links">
          <%= link_to "/clients", class: "dashboard-quick-link" do %>
            <span>👥</span>
            <span>Gérer les clients</span>
          <% end %>
          
          <%= link_to "/quotes", class: "dashboard-quick-link" do %>
            <span>📄</span>
            <span>Voir les devis</span>
          <% end %>
          
          <%= link_to "/invoices", class: "dashboard-quick-link" do %>
            <span>🧾</span>
            <span>Voir les factures</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Subscription Status Section -->
  <div class="dashboard-subscription-banner">
    <div class="dashboard-subscription-content">
      <div class="dashboard-subscription-icon">✅</div>
      <div class="dashboard-subscription-info">
        <h3 class="dashboard-subscription-title">Abonnement actif</h3>
        <p class="dashboard-subscription-text">
          Votre abonnement mensuel est actif. Profitez de toutes les fonctionnalités !
        </p>
      </div>
    </div>
    <div class="dashboard-subscription-actions">
      <%= link_to "Gérer l'abonnement", "/subscription/portal", method: :post, class: "btn btn-outline" %>
    </div>
  </div>

  <!-- Features Overview -->
  <div class="dashboard-features">
    <h2 class="dashboard-features-title">🎯 Comment ça marche ?</h2>
    
    <div class="dashboard-features-grid">
      <div class="dashboard-feature-card">
        <div class="dashboard-feature-number">1</div>
        <div class="dashboard-feature-icon">📱</div>
        <h3 class="dashboard-feature-title">Connectez WhatsApp</h3>
        <p class="dashboard-feature-text">
          Scannez le QR code pour connecter votre compte WhatsApp personnel en toute sécurité.
        </p>
      </div>

      <div class="dashboard-feature-card">
        <div class="dashboard-feature-number">2</div>
        <div class="dashboard-feature-icon">🎤</div>
        <h3 class="dashboard-feature-title">Commandes vocales</h3>
        <p class="dashboard-feature-text">
          Créez devis et factures par message vocal ou texte en français ou turc.
        </p>
      </div>

      <div class="dashboard-feature-card">
        <div class="dashboard-feature-number">3</div>
        <div class="dashboard-feature-icon">🤖</div>
        <h3 class="dashboard-feature-title">Assistant IA</h3>
        <p class="dashboard-feature-text">
          L'assistant vous guide étape par étape pour créer vos documents professionnels.
        </p>
      </div>

      <div class="dashboard-feature-card">
        <div class="dashboard-feature-number">4</div>
        <div class="dashboard-feature-icon">📄</div>
        <h3 class="dashboard-feature-title">PDF automatiques</h3>
        <p class="dashboard-feature-text">
          Recevez instantanément vos devis et factures en PDF directement sur WhatsApp.
        </p>
      </div>
    </div>
  </div>

  <!-- Help Section -->
  <div class="dashboard-help-banner">
    <div class="dashboard-help-content">
      <h3 class="dashboard-help-title">📚 Besoin d'aide ?</h3>
      <p class="dashboard-help-text">
        Consultez nos guides ou envoyez "aide" sur WhatsApp pour découvrir toutes les commandes disponibles.
      </p>
    </div>
    <div class="dashboard-help-actions">
      <%= link_to "Guide d'utilisation", "/help", class: "btn btn-secondary" %>
    </div>
  </div>
</div>

