<% content_for :title, "Modifier Devis - Devis WhatsApp" %>

<!-- Quote Edit Page - Simple Form -->
<div class="min-h-screen bg-gray-50">
  
  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between p-4">
      <%= link_to quote_path(@quote&.id || 1), class: "text-gray-700 hover:text-gray-900" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-lg font-semibold text-gray-900">Modifier le devis</h1>
      <div class="w-6"></div>
    </div>
  </header>

  <!-- Content -->
  <main class="p-4 max-w-3xl mx-auto">
    
    <%= form_with(url: quote_path(@quote&.id || 1), method: :patch, local: true) do |f| %>
      
      <!-- Quote Number & Date -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <h3 class="font-semibold text-gray-900 mb-4">Informations g√©n√©rales</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Num√©ro de devis</label>
            <input type="text" value="<%= @quote&.number || 'DEVIS-2025-001' %>" class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" readonly>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Date d'√©mission</label>
              <%= f.date_field :issue_date, value: (@quote&.created_at || Time.current).strftime('%Y-%m-%d'), class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Validit√©</label>
              <%= f.date_field :validity_date, value: (@quote&.valid_until || 30.days.from_now).strftime('%Y-%m-%d'), class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Client</label>
            <input type="text" value="<%= @quote&.client&.name || 'Client Demo' %>" class="w-full px-4 py-3 border border-gray-300 rounded-lg bg-gray-100 text-gray-700" readonly>
            <p class="text-xs text-gray-500 mt-1">Le client ne peut pas √™tre modifi√© apr√®s cr√©ation</p>
          </div>
        </div>
      </div>

      <!-- Line Items -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="font-semibold text-gray-900">Prestations</h3>
          <button type="button" id="add-line-item" class="text-green-600 hover:text-green-700 font-medium text-sm">
            + Ajouter une ligne
          </button>
        </div>
        
        <div id="quote-items" class="space-y-4">
          <% if @quote&.items&.any? %>
            <% @quote.items.each_with_index do |item, index| %>
              <div class="quote-item p-4 bg-gray-50 rounded-lg border border-gray-200">
                <div class="grid grid-cols-1 gap-3">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Description</label>
                    <textarea name="quote[items][<%= index %>][description]" rows="2" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="Ex: Ma√ßonnerie mur ext√©rieur"><%= item.description %></textarea>
                  </div>
                  <div class="grid grid-cols-3 gap-2">
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">Quantit√©</label>
                      <input type="number" name="quote[items][<%= index %>][quantity]" step="0.01" value="<%= item.quantity %>" class="item-quantity w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="50">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">Prix unitaire (‚Ç¨)</label>
                      <input type="number" name="quote[items][<%= index %>][unit_price]" step="0.01" value="<%= item.unit_price %>" class="item-price w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="85.00">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-600 mb-1">Total</label>
                      <input type="text" value="<%= number_to_currency(item.total, unit: '', precision: 2) %> ‚Ç¨" readonly class="item-total w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-gray-100 text-gray-700">
                    </div>
                  </div>
                </div>
                <button type="button" class="remove-item mt-2 text-red-600 hover:text-red-700 text-xs">
                  üóëÔ∏è Supprimer
                </button>
              </div>
            <% end %>
          <% else %>
            <div class="quote-item p-4 bg-gray-50 rounded-lg border border-gray-200">
              <div class="grid grid-cols-1 gap-3">
                <div>
                  <label class="block text-xs font-medium text-gray-600 mb-1">Description</label>
                  <textarea name="quote[items][0][description]" rows="2" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="Ex: Ma√ßonnerie mur ext√©rieur"></textarea>
                </div>
                <div class="grid grid-cols-3 gap-2">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Quantit√©</label>
                    <input type="number" name="quote[items][0][quantity]" step="0.01" value="1" class="item-quantity w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="50">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Prix unitaire (‚Ç¨)</label>
                    <input type="number" name="quote[items][0][unit_price]" step="0.01" value="0" class="item-price w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="85.00">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Total</label>
                    <input type="text" value="0,00 ‚Ç¨" readonly class="item-total w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-gray-100 text-gray-700">
                  </div>
                </div>
              </div>
              <button type="button" class="remove-item mt-2 text-red-600 hover:text-red-700 text-xs">
                üóëÔ∏è Supprimer
              </button>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Totals (Read-only) -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <h3 class="font-semibold text-gray-900 mb-4">Totaux</h3>
        <div class="space-y-3">
          <div class="flex justify-between text-gray-700">
            <span>Sous-total HT</span>
            <span id="subtotal-display" class="font-medium"><%= number_to_currency(@quote&.subtotal || 0, unit: "", precision: 2) %> ‚Ç¨</span>
          </div>
          <div class="flex justify-between text-gray-700">
            <span>TVA (20%)</span>
            <span id="vat-display" class="font-medium"><%= number_to_currency(@quote&.tax_amount || 0, unit: "", precision: 2) %> ‚Ç¨</span>
          </div>
          <div class="flex justify-between text-xl font-bold text-gray-900 pt-3 border-t-2 border-gray-300">
            <span>Total TTC</span>
            <span id="total-display" class="text-green-600"><%= number_to_currency(@quote&.total || 0, unit: "", precision: 2) %> ‚Ç¨</span>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Notes (optionnel)</label>
        <%= f.text_area :notes, value: @quote&.notes, rows: 4, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none", placeholder: "Conditions particuli√®res, d√©lais, garanties..." %>
      </div>

      <!-- Actions -->
      <div class="flex gap-3">
        <%= link_to quote_path(@quote&.id || 1), class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-4 px-4 rounded-lg text-center transition" do %>
          Annuler
        <% end %>
        <%= f.submit "Enregistrer", class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-4 rounded-lg text-center transition cursor-pointer" %>
      </div>
      
    <% end %>

  </main>

</div>

<script>
  // Calculate totals
  function calculateTotals() {
    let subtotal = 0;
    
    document.querySelectorAll('.quote-item').forEach(item => {
      const quantity = parseFloat(item.querySelector('.item-quantity').value) || 0;
      const price = parseFloat(item.querySelector('.item-price').value) || 0;
      const total = quantity * price;
      
      item.querySelector('.item-total').value = total.toFixed(2) + ' ‚Ç¨';
      subtotal += total;
    });
    
    const vat = subtotal * 0.20;
    const total = subtotal + vat;
    
    document.getElementById('subtotal-display').textContent = subtotal.toFixed(2) + ' ‚Ç¨';
    document.getElementById('vat-display').textContent = vat.toFixed(2) + ' ‚Ç¨';
    document.getElementById('total-display').textContent = total.toFixed(2) + ' ‚Ç¨';
  }
  
  // Add event listeners to all quantity and price inputs
  document.addEventListener('input', function(e) {
    if (e.target.classList.contains('item-quantity') || e.target.classList.contains('item-price')) {
      calculateTotals();
    }
  });
  
  // Add new line item
  document.getElementById('add-line-item')?.addEventListener('click', function() {
    const container = document.getElementById('quote-items');
    const itemCount = container.querySelectorAll('.quote-item').length;
    
    const newItem = document.createElement('div');
    newItem.className = 'quote-item p-4 bg-gray-50 rounded-lg border border-gray-200';
    newItem.innerHTML = `
      <div class="grid grid-cols-1 gap-3">
        <div>
          <label class="block text-xs font-medium text-gray-600 mb-1">Description</label>
          <textarea name="quote[items][${itemCount}][description]" rows="2" class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="Ex: Ma√ßonnerie mur ext√©rieur"></textarea>
        </div>
        <div class="grid grid-cols-3 gap-2">
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Quantit√©</label>
            <input type="number" name="quote[items][${itemCount}][quantity]" step="0.01" value="1" class="item-quantity w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="50">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Prix unitaire (‚Ç¨)</label>
            <input type="number" name="quote[items][${itemCount}][unit_price]" step="0.01" value="0" class="item-price w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" placeholder="85.00">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-600 mb-1">Total</label>
            <input type="text" value="0,00 ‚Ç¨" readonly class="item-total w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-gray-100 text-gray-700">
          </div>
        </div>
      </div>
      <button type="button" class="remove-item mt-2 text-red-600 hover:text-red-700 text-xs">
        üóëÔ∏è Supprimer
      </button>
    `;
    
    container.appendChild(newItem);
  });
  
  // Remove line item
  document.addEventListener('click', function(e) {
    if (e.target.classList.contains('remove-item') || e.target.closest('.remove-item')) {
      const item = e.target.closest('.quote-item');
      if (document.querySelectorAll('.quote-item').length > 1) {
        item.remove();
        calculateTotals();
      } else {
        alert('Vous devez avoir au moins une ligne de prestation');
      }
    }
  });
  
  // Initialize calculations
  calculateTotals();
</script>
