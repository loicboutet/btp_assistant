        <div class="form-group">
          <%= f.label :last_name, "Nom", class: "form-label" %>
          <%= f.text_field :last_name, class: "form-input", placeholder: "Dupont" %>
        </div>
      </div>

      <div class="form-fields-grid">
        <div class="form-group">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-input", placeholder: "jean.dupont@example.com" %>
