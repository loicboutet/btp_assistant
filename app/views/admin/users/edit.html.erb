<% content_for :title, "Modifier utilisateur - Admin" %>

<div class="admin-page-header">
  <%= link_to admin_user_path(@user), class: "back-link" do %>
    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 4px;">
      <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
    </svg>
    Retour au profil utilisateur
  <% end %>
  <h1>Modifier l'utilisateur</h1>
  <p class="text-muted"><%= @user.display_name %></p>
</div>

<div class="admin-card">
  <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>

    <div style="margin-bottom: var(--spacing-xl);">
      <h3 style="margin-bottom: var(--spacing-lg); color: var(--primary-green);">Identit√© & Contact</h3>

      <div class="form-fields-grid">
        <div class="form-group">
          <%= f.label :first_name, "Pr√©nom", class: "form-label" %>
          <%= f.text_field :first_name, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Nom", class: "form-label" %>
          <%= f.text_field :last_name, class: "form-input" %>
        </div>
      </div>

      <div class="form-fields-grid">
        <div class="form-group">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number, "T√©l√©phone WhatsApp (E.164)", class: "form-label" %>
          <%= f.text_field :phone_number, class: "form-input", placeholder: "+33612345678" %>
          <span class="form-hint">Ex: +33612345678 (sans espaces)</span>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :preferred_language, "Langue pr√©f√©r√©e", class: "form-label" %>
        <%= f.select :preferred_language, [["üá´üá∑ Fran√ßais", "fr"], ["üáπüá∑ T√ºrk√ße", "tr"]], {}, class: "form-select" %>
      </div>
    </div>

    <div style="margin-bottom: var(--spacing-xl);">
      <h3 style="margin-bottom: var(--spacing-lg); color: var(--primary-green);">Informations Professionnelles</h3>

      <div class="form-group">
        <%= f.label :company_name, "Nom de l'entreprise", class: "form-label" %>
        <%= f.text_field :company_name, class: "form-input" %>
      </div>

      <div class="form-fields-grid">
        <div class="form-group">
          <%= f.label :siret, "Num√©ro SIRET", class: "form-label" %>
          <%= f.text_field :siret, class: "form-input" %>
        </div>

        <div class="form-group">
          <%= f.label :vat_number, "Num√©ro de TVA", class: "form-label" %>
          <%= f.text_field :vat_number, class: "form-input" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :address, "Adresse compl√®te", class: "form-label" %>
        <%= f.text_area :address, class: "form-textarea", rows: 3 %>
      </div>
    </div>

    <div style="margin-bottom: var(--spacing-xl);">
      <h3 style="margin-bottom: var(--spacing-lg); color: var(--primary-green);">Acc√®s & Abonnement</h3>

      <div class="form-group">
        <label class="form-checkbox-label">
          <%= f.check_box :bypass_subscription, class: "form-checkbox" %>
          <span>üéÅ Acc√®s gratuit permanent (compte test)</span>
        </label>
        <span class="form-hint">Ce compte pourra cr√©er des documents sans abonnement ni p√©riode d'essai.</span>
      </div>

      <div class="form-fields-grid">
        <div class="form-group">
          <%= f.label :trial_ends_at, "Fin de p√©riode d'essai", class: "form-label" %>
          <%= f.datetime_local_field :trial_ends_at, class: "form-input", value: @user.trial_ends_at&.strftime('%Y-%m-%dT%H:%M') %>
          <span class="form-hint">
            <% if @user.in_trial_period? %>
              ‚è≥ <%= @user.trial_days_remaining %> jours restants
            <% elsif @user.trial_expired? %>
              ‚ùå Expir√©e
            <% else %>
              Non d√©finie
            <% end %>
          </span>
        </div>

        <div class="form-group">
          <%= label_tag :account_status, "Statut du compte", class: "form-label" %>
          <%= select_tag :"user[account_status]",
            options_for_select(
              [
                ["En attente (pending)", "pending"],
                ["Actif (active)", "active"],
                ["Suspendu (canceled)", "suspended"]
              ],
              (@user.subscription_status == 'canceled' ? 'suspended' : @user.subscription_status)
            ),
            class: "form-select" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :stripe_customer_id, "Stripe Customer ID", class: "form-label" %>
        <%= f.text_field :stripe_customer_id, class: "form-input" %>
        <span class="form-hint">Optionnel (rempli automatiquement lors du paiement)</span>
      </div>

      <div class="alert alert-info" style="margin-top: var(--spacing-md);">
        <strong>üí° Astuce :</strong> Pour donner un acc√®s permanent sans paiement, cochez "Acc√®s gratuit permanent". 
        Pour prolonger l'essai, modifiez la date de fin de p√©riode d'essai.
      </div>

      <div class="alert alert-warning" style="margin-top: var(--spacing-md);">
        <strong>WhatsApp :</strong> Pour r√©initialiser la connexion WhatsApp, utilisez le bouton "R√©initialiser WhatsApp" sur la page de profil de l'utilisateur.
      </div>
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">
        <span>Enregistrer les modifications</span>
      </button>
      <%= link_to admin_user_path(@user), class: "btn btn-secondary" do %>
        <span>Annuler</span>
      <% end %>
    </div>

  <% end %>
</div>
