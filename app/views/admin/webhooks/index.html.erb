<% content_for :title, "Webhooks - Admin" %>

<div class="admin-page-header">
  <h1>Surveillance des Webhooks</h1>
  <p class="text-muted">Activité Unipile & Stripe en temps réel</p>
</div>

<!-- Stats Cards -->
<div class="stats-grid">
  <div class="stat-card">
    <div class="stat-label">Webhooks Unipile (24h)</div>
    <div class="stat-value">247</div>
    <div class="stat-detail success-text">243 succès (98.4%)</div>
  </div>
  <div class="stat-card">
    <div class="stat-label">Webhooks Stripe (24h)</div>
    <div class="stat-value">18</div>
    <div class="stat-detail success-text">18 succès (100%)</div>
  </div>
  <div class="stat-card">
    <div class="stat-label">Échecs à rejouer</div>
    <div class="stat-value warning-text">4</div>
    <div class="stat-detail">Nécessite action</div>
  </div>
  <div class="stat-card">
    <div class="stat-label">Temps de réponse moyen</div>
    <div class="stat-value">1.2s</div>
    <div class="stat-detail success-text">Excellent</div>
  </div>
</div>

<!-- Filters -->
<div class="admin-card" style="margin-top: var(--spacing-xl); margin-bottom: var(--spacing-lg);">
  <div class="filters-bar">
    <div class="filter-group">
      <label>Source</label>
      <select class="form-select">
        <option>Tous</option>
        <option>Unipile</option>
        <option>Stripe</option>
      </select>
    </div>
    <div class="filter-group">
      <label>Statut</label>
      <select class="form-select">
        <option>Tous</option>
        <option>Succès</option>
        <option>Échec</option>
        <option>En attente</option>
      </select>
    </div>
    <div class="filter-group">
      <label>Période</label>
      <select class="form-select">
        <option selected>Aujourd'hui</option>
        <option>7 derniers jours</option>
        <option>30 derniers jours</option>
      </select>
    </div>
  </div>
</div>

