<!-- General Settings -->
<div class="admin-card" style="margin-top: var(--spacing-xl);">
  <div class="card-header">
    <h2>Paramètres généraux</h2>
  </div>
  <form class="settings-form">
    <div class="form-fields-grid">
      <div class="form-group">
        <label class="form-label">Nom de l'application</label>
        <input type="text" class="form-input" value="Devis WhatsApp" placeholder="Nom de l'application">
        <small class="form-hint">Nom affiché aux utilisateurs</small>
      </div>

      <div class="form-group">
        <label class="form-label">Email support</label>
        <input type="email" class="form-input" value="support@deviswhatsapp.fr" placeholder="Email de support">
        <small class="form-hint">Email de contact pour les utilisateurs</small>
      </div>

      <div class="form-group">
        <label class="form-label">URL de l'application</label>
        <input type="url" class="form-input" value="https://deviswhatsapp.fr" placeholder="https://...">
        <small class="form-hint">URL publique de l'application</small>
      </div>

      <div class="form-group">
        <label class="form-label">Langue par défaut</label>
        <select class="form-select">
          <option selected>Français</option>
          <option>Turc</option>
        </select>
        <small class="form-hint">Langue par défaut pour les nouveaux utilisateurs</small>
      </div>
    </div>

    <div class="form-group">
      <label class="form-label">Mode maintenance</label>
      <label class="checkbox-label">
        <input type="checkbox">
        <span>Activer le mode maintenance</span>
      </label>
      <small class="form-hint">Désactive l'accès à l'application pour les utilisateurs</small>
    </div>

    <div class="form-actions">
      <button type="button" class="btn btn-outline btn-with-icon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="20" height="20">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
        <span>Annuler</span>
      </button>
      <button type="submit" class="btn btn-primary btn-with-icon">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="20" height="20">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
        <span>Sauvegarder</span>
      </button>
    </div>
  </form>
</div>

