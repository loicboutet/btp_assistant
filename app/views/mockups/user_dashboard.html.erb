<!-- Mobile-First Dashboard - Simple Menu with 4 Cards -->
<div class="min-h-screen bg-gray-50">
  
  <!-- Header with WhatsApp Icon -->
  <header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between p-4">
      <!-- WhatsApp Icon (Click to open chat) -->
      <a href="https://wa.me/33612000000?text=Bonjour" class="flex items-center space-x-2">
        <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center shadow-lg">
          <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
        </div>
        <span class="text-sm font-medium text-gray-700">WhatsApp</span>
      </a>
      
      <!-- Hamburger Menu -->
      <button id="menu-toggle" class="p-2">
        <svg class="w-8 h-8 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </header>

  <!-- Main Content - 4 Big Cards -->
  <main class="p-6 max-w-2xl mx-auto">
    <div class="space-y-4">
      
      <!-- Card 1: Mes devis -->
      <a href="/quotes" class="block">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-800">Mes devis</h2>
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      </a>

      <!-- Card 2: Mes factures -->
      <a href="/invoices" class="block">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-800">Mes factures</h2>
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      </a>

      <!-- Card 3: Mes clients -->
      <a href="/clients" class="block">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-800">Mes clients</h2>
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      </a>

      <!-- Card 4: Mon profil -->
      <a href="/profile" class="block">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md transition-shadow">
          <div class="flex items-center justify-between">
            <h2 class="text-xl font-semibold text-gray-800">Mon profil</h2>
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          </div>
        </div>
      </a>

    </div>
  </main>

  <!-- Slide-out Menu (Hidden by default) -->
  <div id="side-menu" class="fixed inset-0 bg-black bg-opacity-50 z-20 hidden">
    <div class="bg-white w-64 h-full shadow-xl p-6">
      <button id="menu-close" class="mb-6 text-gray-500">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      
      <nav class="space-y-4">
        <a href="/quotes" class="block text-gray-700 font-medium hover:text-green-600">MES DEVIS</a>
        <a href="/invoices" class="block text-gray-700 font-medium hover:text-green-600">MES FACTURES</a>
        <a href="/clients" class="block text-gray-700 font-medium hover:text-green-600">MES CLIENTS</a>
        <a href="/conversations" class="block text-gray-700 font-medium hover:text-green-600">CONVERSATIONS</a>
        <a href="/profile" class="block text-gray-700 font-medium hover:text-green-600">MON PROFIL</a>
        <a href="/subscription/portal" class="block text-gray-700 font-medium hover:text-green-600">ABONNEMENT</a>
        <a href="https://youtube.com/watch?v=demo" target="_blank" class="block text-gray-700 font-medium hover:text-green-600">TUTO YOUTUBE</a>
      </nav>
    </div>
  </div>

</div>

<script>
  // Simple menu toggle
  document.getElementById('menu-toggle')?.addEventListener('click', () => {
    document.getElementById('side-menu').classList.remove('hidden');
  });
  
  document.getElementById('menu-close')?.addEventListener('click', () => {
    document.getElementById('side-menu').classList.add('hidden');
  });
  
  document.getElementById('side-menu')?.addEventListener('click', (e) => {
    if (e.target.id === 'side-menu') {
      document.getElementById('side-menu').classList.add('hidden');
    }
  });
</script>
