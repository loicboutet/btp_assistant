<% content_for :title, "Modifier Facture - Devis WhatsApp" %>

<!-- Invoice Edit Page - Simple Form -->
<div class="min-h-screen bg-gray-50">
  
  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-10">
    <div class="flex items-center justify-between p-4">
      <%= link_to invoice_path(@invoice || 1), class: "text-gray-700 hover:text-gray-900" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <h1 class="text-lg font-semibold text-gray-900">Modifier la facture</h1>
      <div class="w-6"></div>
    </div>
  </header>

  <!-- Content -->
  <main class="p-4 max-w-3xl mx-auto">
    
    <%= form_with(model: @invoice, url: @invoice ? invoice_path(@invoice) : invoices_path, method: @invoice&.persisted? ? :patch : :post, local: true) do |f| %>
      
      <!-- Invoice Number & Dates -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <h3 class="font-semibold text-gray-900 mb-4">Informations g√©n√©rales</h3>
        
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Num√©ro de facture</label>
            <%= f.text_field :invoice_number, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none", placeholder: "FACT-2025-001", readonly: true %>
          </div>
          
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Date d'√©mission</label>
              <%= f.date_field :issue_date, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Date d'√©ch√©ance</label>
              <%= f.date_field :due_date, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Client</label>
            <%= f.collection_select :client_id, Client.all, :id, :name, {}, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Statut</label>
            <%= f.select :status, [['En attente', 'sent'], ['Pay√©e', 'paid'], ['En retard', 'overdue']], {}, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
          </div>
        </div>
      </div>

      <!-- Line Items -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <div class="flex justify-between items-center mb-4">
          <h3 class="font-semibold text-gray-900">Prestations</h3>
          <button type="button" class="text-green-600 hover:text-green-700 font-medium text-sm">
            + Ajouter une ligne
          </button>
        </div>
        
        <div id="invoice-items" class="space-y-4">
          <%= f.fields_for :invoice_items do |item_form| %>
            <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
              <div class="grid grid-cols-1 gap-3">
                <div>
                  <label class="block text-xs font-medium text-gray-600 mb-1">Description</label>
                  <%= item_form.text_area :description, rows: 2, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none", placeholder: "Description de la prestation" %>
                </div>
                <div class="grid grid-cols-3 gap-2">
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Quantit√©</label>
                    <%= item_form.number_field :quantity, step: 0.01, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Prix unitaire</label>
                    <%= item_form.number_field :unit_price, step: 0.01, class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none" %>
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-600 mb-1">Total</label>
                    <input type="text" value="0,00 ‚Ç¨" readonly class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg bg-gray-100 text-gray-700">
                  </div>
                </div>
              </div>
              <button type="button" class="mt-2 text-red-600 hover:text-red-700 text-xs">
                üóëÔ∏è Supprimer
              </button>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Totals (Read-only) -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <h3 class="font-semibold text-gray-900 mb-4">Totaux</h3>
        <div class="space-y-3">
          <div class="flex justify-between text-gray-700">
            <span>Sous-total HT</span>
            <span class="font-medium"><%= number_to_currency(@invoice&.subtotal_amount || 0, unit: "", precision: 2) %> ‚Ç¨</span>
          </div>
          <div class="flex justify-between text-gray-700">
            <span>TVA (20%)</span>
            <span class="font-medium"><%= number_to_currency(@invoice&.vat_amount || 0, unit: "", precision: 2) %> ‚Ç¨</span>
          </div>
          <div class="flex justify-between text-xl font-bold text-gray-900 pt-3 border-t-2 border-gray-300">
            <span>Total TTC</span>
            <span class="text-green-600"><%= number_to_currency(@invoice&.total_amount || 0, unit: "", precision: 2) %> ‚Ç¨</span>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-2">Notes (optionnel)</label>
        <%= f.text_area :notes, rows: 4, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:border-green-500 focus:outline-none", placeholder: "Modalit√©s de paiement, informations compl√©mentaires..." %>
      </div>

      <!-- Actions -->
      <div class="flex gap-3">
        <%= link_to invoices_path, class: "flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-4 px-4 rounded-lg text-center transition" do %>
          Annuler
        <% end %>
        <%= f.submit "Enregistrer", class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-4 rounded-lg text-center transition cursor-pointer" %>
      </div>
      
    <% end %>

  </main>

</div>
