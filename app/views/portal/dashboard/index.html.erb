<% content_for :title, t('client.dashboard.title') %>
<% content_for :page_title, t('client.dashboard.title') %>
<% content_for :active_page, :dashboard %>

<!-- Main Content - Two Simple Cards like mockup -->
<main class="p-6 max-w-2xl mx-auto space-y-4">
  
  <!-- Card 1: Mes devis -->
  <%= link_to client_quotes_path, class: "block" do %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md hover:border-green-500 transition-all">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-semibold text-gray-800"><%= t('client.dashboard.my_quotes') %></h2>
        <% if @quotes_count > 0 %>
          <span class="bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-full">
            <%= @quotes_count %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Card 2: Mes factures -->
  <%= link_to client_invoices_path, class: "block" do %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md hover:border-green-500 transition-all">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-semibold text-gray-800"><%= t('client.dashboard.my_invoices') %></h2>
        <% if @invoices_count > 0 %>
          <span class="bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-full">
            <%= @invoices_count %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
  
  <!-- Card 3: Mes clients -->
  <%= link_to client_clients_path, class: "block" do %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 hover:shadow-md hover:border-green-500 transition-all">
      <div class="flex items-center justify-between">
        <h2 class="text-2xl font-semibold text-gray-800"><%= t('client.dashboard.my_clients') %></h2>
        <% if @clients_count > 0 %>
          <span class="bg-green-100 text-green-800 text-sm font-medium px-3 py-1 rounded-full">
            <%= @clients_count %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- WhatsApp Help Hint -->
  <div class="mt-8 text-center">
    <p class="text-sm text-gray-500">
      ðŸ’¬ <%= t('client.dashboard.whatsapp_hint_html') %>
    </p>
  </div>

</main>
