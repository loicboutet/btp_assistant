<%# Status badge for quotes %>
<% 
  badge_classes = case quote.status
                  when 'draft'
                    'bg-gray-100 text-gray-800'
                  when 'sent'
                    'bg-green-100 text-green-800'
                  when 'accepted'
                    'bg-blue-100 text-blue-800'
                  when 'rejected'
                    'bg-red-100 text-red-800'
                  else
                    'bg-gray-100 text-gray-800'
                  end
%>
<span class="px-3 py-1 <%= badge_classes %> text-xs font-medium rounded-full">
  <%= t("client.quotes.status.#{quote.status}") %>
</span>
