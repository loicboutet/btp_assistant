<% content_for :title, "Connexion - Devis WhatsApp" %>

<!-- Page Title -->
<div style="text-align: center; margin-bottom: var(--spacing-sm);">
  <h1 style="font-size: var(--font-size-xl); font-weight: var(--font-weight-bold); color: var(--text-dark); margin-bottom: 0.25rem;">
    Connexion
  </h1>
  <p style="font-size: var(--font-size-sm); color: var(--text-gray);">
    Accédez à votre compte Devis WhatsApp
  </p>
</div>

<!-- Login Form -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Email Field -->
  <div class="form-group">
    <%= f.label :email, "Adresse e-mail", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "form-input", 
        placeholder: "votre@email.com" %>
  </div>

  <!-- Password Field -->
  <div class="form-group">
    <%= f.label :password, "Mot de passe", class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", 
        class: "form-input", 
        placeholder: "Votre mot de passe" %>
  </div>

  <!-- Remember Me Checkbox -->
  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <label class="checkbox-label">
        <%= f.check_box :remember_me %>
        <span>Se souvenir de moi</span>
      </label>
    </div>
  <% end %>

  <!-- Submit Button -->
  <div class="form-group">
    <%= f.submit "Se connecter", class: "btn btn-primary", style: "width: 100%;" %>
  </div>
<% end %>

<!-- Additional Links -->
<div style="margin-top: var(--spacing-sm); text-align: center;">
  <div style="display: flex; flex-direction: column; gap: 0.25rem;">
    <% if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p style="font-size: var(--font-size-sm); color: var(--text-gray);">
        Pas encore de compte ? 
        <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-link" %>
      </p>
    <% end %>
    
    <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <p style="font-size: var(--font-size-sm); color: var(--text-gray);">
        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-link" %>
      </p>
    <% end %>
    
    <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <p style="font-size: var(--font-size-sm); color: var(--text-gray);">
        <%= link_to "Renvoyer les instructions de confirmation", new_confirmation_path(resource_name), class: "text-link" %>
      </p>
    <% end %>
  </div>
</div>
